    <!--is.finition -->
    <record id="is_finition_form_view" model="ir.ui.view">
        <field name="name">is_finition_from_view</field>
        <field name="model">is.finition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
