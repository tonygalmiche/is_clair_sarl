<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="is_report_purchasequotation_document" name="is_report_purchasequotation_document" inherit_id="purchase.report_purchasequotation_document">
        <t t-set="address" position="replace">
            <t t-set="address">
                <div>
                    <b><div t-field="o.partner_id.parent_id.name"/></b>
                    <div>A l'intention de <span t-field="o.partner_id.name"/></div>
                    <div t-field="o.partner_id.street"/>
                    <div t-field="o.partner_id.street2"/>
                    <div><span t-field="o.partner_id.zip"/> <span t-field="o.partner_id.city"/></div>
                </div>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
            </t>
        </t>
        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="page">
                <style>
                    .o_report_layout_boxed .page > table:not(.o_main_table) tr td:last-child {
                        background-color: white;
                    }
                </style>
                <div class="oe_structure"/>
                <h2>Demande de prix <span t-field="o.name"/></h2>

                <div t-if="o.is_affaire_id">Affaire : <span t-field="o.is_affaire_id.name"/> - <span t-field="o.is_affaire_id.nom"/></div>
                <div t-if="o.is_delai">Délai : <span t-field="o.is_delai"/></div>

                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th name="th_quantity" class="text-right"><strong>Qt</strong></th>
                            <th name="th_description"><strong>Description</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.order_line" t-as="order_line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                                <t t-if="not order_line.display_type">
                                    <td class="text-right">
                                        <span t-field="order_line.product_qty"/>
                                        <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                    </td>

                                    <td id="product">
                                        <span t-field="order_line.name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td colspan="99" id="section">
                                        <span t-field="order_line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div><b><span t-field="o.user_id.name"/></b> - Tél : <span t-field="o.user_id.partner_id.phone"/> - Courriel : <span t-field="o.user_id.partner_id.email"/></div>

                <p t-field="o.notes"/>
                <div class="oe_structure"/>
            </div>
        </xpath>
    </template>
</odoo>
